{
  "name": "todos-graphql-server",
  "version": "1.0.0",
  "description": "graphql server for react-todo-flavors",
  "main": "src/server.js",
  "author": "Dr. Mike Hopper",
  "license": "MIT",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "dev-debug": "DEBUG=* nodemon src/server.js",
    "model-tester": "mocha \"src/models/*.test.js\"",
    "gql-tester": "mocha \"src/graphql/*.test.js\"",
    "test": "yarn model-tester && concurrently --success first -k \"NODE_ENV=test node src/server.js\" \"yarn gql-tester\""
  },
  "dependencies": {
    "express": "^4.16.4",
    "express-graphql": "^0.7.1",
    "graphql": "^14.1.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "concurrently": "^4.1.0",
    "mocha": "^5.2.0",
    "supertest": "^3.4.2"
  }
}
